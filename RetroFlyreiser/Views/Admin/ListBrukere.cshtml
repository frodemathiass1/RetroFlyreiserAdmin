@model List<RetroFlyreiser.Model.DBBRUKER>

@{
    ViewBag.Title = "ListBrukere";
}

<h2>Brukere</h2>
<p class="label-warning container">
    N.B:
    Brukere må tilegnes et unikt brukernavn ved registrering.<br />
</p>
<p>
    @Html.ActionLink("Opprett ny", "RegistrerBruker")
</p>
<div class="container">
    <div class="col-lg-12">
        <table class="table table-hover table-responsive sortable">
            <thead class="label-info">
                <tr>
                    <td class="sortable by">  @Html.DisplayNameFor(model => model[0].BRUKERNAVN) </td>                  
                    <th> @Html.DisplayNameFor(model => model[0].PASSORD) </th>
                    <th><span class="glyphicon glyphicon-sort"></span></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bruker in Model)
                {
                    <tr>
                        <td> @Html.DisplayFor(modelItem => bruker.BRUKERNAVN) </td>
                        <td> @Html.DisplayFor(modelItem => bruker.PASSORD) </td>
                        <td>                         
                            @Html.ActionLink("Detaljer", "BrukerDetaljer", new { BRUKERNAVN = bruker.BRUKERNAVN }, new { @class = "btn btn-success" })
                            @Html.ActionLink("Slett", "SlettBruker", new { BRUKERNAVN = bruker.BRUKERNAVN }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
