@model RetroFlyreiser.Model.Bruker
@{
    ViewBag.Title = "RegistrerBruker";
}

<h2>Registrer Bruker</h2>

<div class="jumbotron">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>Registrer ny bruker</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Brukernavn, new { htmlAttributes = new { @class = "form-control",placeholder="Velg et brukernavn" } })
                    @Html.ValidationMessageFor(model => model.Brukernavn, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.Passord, new { @class = "form-control", placeholder = "Velg et Passord" })
                    @Html.ValidationMessageFor(model => model.Passord, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Registrer" class="btn btn-info btn-group-justified" />
                </div>
            </div>
        </div>
    }
</div>
<div>
    @Html.ActionLink("Tilbake til Login side", "LoginSide")
</div>



