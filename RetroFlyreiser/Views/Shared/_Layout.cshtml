
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Retro Flyreiser</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">

    <script src="~/Scripts/jquery-3.2.1.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />  
    <script src="~/Scripts/bootstrap-sortable.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <link href="~/Content/bootstrap-sortable.css" rel="stylesheet" />
    <link href="~/Content/StyleSheetRetroFlyreiser.css" rel="stylesheet" />  
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/animate.css" rel="stylesheet" />
</head>
<body>
    @if (Session["LoggetInn"] == null)
    {

        @Html.Partial("_Navbar")
    }
    else if ((bool)Session["LoggetInn"] == false)
    {
        @Html.Partial("_Navbar")
    }
    else
    {
        @Html.Partial("_NavbarAdmin")
    }
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="navbar-fixed-bottom">
            <p>&copy; @DateTime.Now.Year - Høgskolen i Oslo og Akershus</p>
        </footer>
    </div>
    <script type="text/javascript">
        $('.dropdown-toggle').dropdown();
    </script>
</body>
</html>